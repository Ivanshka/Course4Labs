<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskInfoActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated Points"/>
        <Spinner
            android:id="@+id/taskEstimatedPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/estimatedPoints" />
    </LinearLayout>

    <EditText
        android:id="@+id/taskEstimatedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Estimated time"
        android:inputType="number"/>

    <EditText
        android:id="@+id/taskOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Owner"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/toMainTaskBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prev"/>

        <Button
            android:id="@+id/toTaskSummaryNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"/>
    </LinearLayout>

</LinearLayout>